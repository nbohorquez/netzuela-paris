<!DOCTYPE HTML>
<div metal:use-macro="view.diagrama_global">
	<div metal:fill-slot="contenido">
		
		<!-- Encabezado
		================================================== -->
		<div class="page-header">
  			<h1>Registro</h1>
		</div>
		
		<!-- Contenido
		================================================== -->	
		<div id="contenido_pestanas" class="tab-content">
			<tal:block tal:condition="aviso" tal:switch="aviso.error">
				<div tal:case="'Error'" class="alert alert-error">
					<button type="button" class="close" data-dismiss="alert">&times;</button>
					<strong>Error</strong> <span tal:content="aviso.mensaje"></span>
				</div>
				<div tal:case="'OK'" class="alert alert-success">
					<button type="button" class="close" data-dismiss="alert">&times;</button>
					<strong>OK</strong> <span tal:content="aviso.mensaje"></span>
				</div>
			</tal:block>
			<form class="form-horizontal" id="formulario_registro_consumidor" method="post" accept-charset="UTF-8">
		        <fieldset tal:define="habilitar_campo_sexo 'True'; habilitar_campo_fecha_de_nacimiento 'True'">
		        	<input type="hidden" name="pagina_anterior" value="${view.pagina_anterior}" />
		        	<div metal:use-macro="view.formularios['registro_usuario']"></div>
		          	<hr />
		          	<div metal:use-macro="view.formularios['campo_sexo']"></div>
			        <div metal:use-macro="view.formularios['campo_grado_de_instruccion']"></div>
			        <div metal:use-macro="view.formularios['campo_ubicacion']"></div>
       			    <div metal:use-macro="view.formularios['campo_fecha_de_nacimiento']"></div>
					<hr />
					<div metal:use-macro="view.formularios['campo_condiciones']"></div>
		          	<div class="form-actions">
		          		<button class="btn btn-primary" type="submit" name="enviar" id="enviar">Enviar</button>
		            	<button class="btn" type="submit" name="cancelar" id="cancelar">Cancelar</button>
		          	</div>
		        </fieldset>
			</form>
			<div id="condiciones_servicio" class="modal hide fade">
	            <div metal:use-macro="view.macros['condiciones']"></div>
			</div>
		</div>
	</div>
	<div metal:fill-slot="scripts_extra">
		<script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.min.js"></script>
		<script type="text/javascript" src="/estatico/js/bootstrap-datepicker.js"></script>
		<script type="text/javascript" src="/estatico/js/bootstrap-alert.js"></script>
		<script type="text/javascript" src="/estatico/js/bootstrap-modal.js"></script>
		<script type="text/javascript" src="/estatico/js/registro_consumidor.js"></script>
	</div>
</div>