<!DOCTYPE HTML>
<div metal:use-macro="view.diagrama_global">
	<div metal:fill-slot="contenido">
		
		<!-- Encabezado
		================================================== -->
		<div class="page-header">
  			<h1>Registro</h1>
		</div>
		
		<!-- Contenido
		================================================== -->	
		<div id="contenido_pestanas" class="tab-content">
			<div class="alert alert-error" tal:condition="python:len(mensaje) > 0">
  				<button type="button" class="close" data-dismiss="alert">&times;</button>
  				<strong>Error</strong> <span tal:replace="mensaje"></span>
			</div>
			<form class="form-horizontal" id="formulario_registro" method="post" accept-charset="UTF-8">
		        <fieldset>
		        	<input type="hidden" name="pagina_anterior" value="${view.pagina_anterior}" />
		        	<div metal:use-macro="view.macros['registro_usuario']"></div>
		        	<div class="control-group">
			            <label class="control-label">Ubicaci√≥n</label>
			            <div class="controls">
			            	<span id="ubicacion_visible" class="input-large uneditable-input">Seleccione en el mapa de arriba</span>
		              		<input type="hidden" class="input-large" id="ubicacion" name="ubicacion" />
		            	</div>
		            </div>
		          	<hr />
			        <div class="control-group">
			            <label class="control-label" for="condiciones">
			            	<a data-toggle="modal" href="#condiciones_servicio">Condiciones del servicio</a>
			            </label>
			            <div class="controls">
			            	<label class="checkbox">
			                	<input type="checkbox" id="condiciones" name="condiciones" value="Acepto" />
			                	Acepto
			              	</label>
		            	</div>
		            </div>
		          	<div class="form-actions">
		          		<button class="btn btn-primary" type="submit" name="enviar" id="enviar">Enviar</button>
		            	<button class="btn" type="submit" name="cancelar" id="cancelar">Cancelar</button>
		          	</div>
		        </fieldset>
			</form>
			<div id="condiciones_servicio" class="modal hide fade">
	            <div metal:use-macro="view.macros['condiciones']"></div>
			</div>
		</div>
	</div>
	<div metal:fill-slot="scripts_extra">
		<script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.min.js"></script>
		<script type="text/javascript" src="/estatico/js/bootstrap-alert.js"></script>
		<script type="text/javascript" src="/estatico/js/bootstrap-modal.js"></script>
		<script type="text/javascript" src="/estatico/js/registro.js"></script>
	</div>
</div>