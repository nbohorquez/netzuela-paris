<!DOCTYPE HTML>
<div metal:use-macro="view.diagrama_global">
	<div metal:fill-slot="contenido">
		
		<!-- Encabezado
		================================================== -->	
		<div class="page-header">
			<div class="row-fluid">
				<h1>${usuario.nombre} ${usuario.apellido}</h1>
			</div>
		</div>
		<div id="meta_datos">
			<input type="hidden" name="usuario_id" value="${usuario.usuario_id}" />
		</div>
		
		<!-- Contenido
		================================================== -->	
		<div id="contenido_pestanas" class="tab-content">
			
			<!-- Noticias
			================================================== -->	
        	<div class="tab-pane active" id="noticias" tal:define="registros view.registro">
        		<div metal:use-macro="view.macros['noticias']"></div>
        	</div>
        	
        	<!-- Informacion
			================================================== -->	
        	<div class="tab-pane" id="informacion">
        		<div class="row-fluid">
	      			<div class="span4">
        				<div metal:use-macro="view.macros['fotos_medianas']" tal:define="fotos view.fotos_medianas"></div>
        				<table class="table">
					  			<thead>
					    			<tr>
					      				<th>Datos</th>
					    			</tr>
					  			</thead>
					  			<tbody>
						    		<tr>
						    			<td>
						    				<p>
						    					Nombre<br />
						    					Apellido<br />
						    					Ubicación<br />
						    				</p>
						    			</td>
					  					<td>
					  						<p>
					  							${usuario.nombre}<br />
					  							${usuario.apellido}<br />
					  							${usuario.ubicacion}<br />
					  						</p>
					  					</td>
					  				</tr>
					  			</tbody>
							</table>
        			</div>
        		</div>
        	</div>
        	
        	<!-- Tiendas
			================================================== -->	
            <div class="tab-pane" id="tiendas" tal:define="lista view.tiendas">
            	<div metal:use-macro="view.macros['listado_tiendas']"></div>
            </div>
            
            <!-- Comentarios (calificaciones y reseñas)
			================================================== -->	
            <div class="tab-pane" id="comentarios" tal:define="comentarios view.calificaciones_resenas">
            	<div metal:use-macro="view.macros['comentarios']"></div>
            </div>
      	</div>
	</div>
	<div metal:fill-slot="scripts_extra">
		<script type="text/javascript" src="/estatico/js/bootstrap-tooltip.js"></script>
		<script type="text/javascript" src="/estatico/js/bootstrap-carousel.js"></script>
		<script type="text/javascript" src="/estatico/js/bootstrap-popover.js"></script>
	</div>
</div>