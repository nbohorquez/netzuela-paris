<!DOCTYPE HTML>
<div metal:use-macro="view.diagrama_global">
	<div metal:fill-slot="contenido">
		
		<!-- Encabezado
		================================================== -->
		<div class="page-header">
			<div class="row-fluid">
				<div class="span3">
					<a data-toggle="modal" href="#fotos_producto">
						<div class="thumbnail" tal:define="foto view.obtener_foto('producto', producto.producto_id, 'medianas')">
							<img src="/estatico/${foto.ruta_de_foto}" alt="Foto" tal:condition="foto.ruta_de_foto != ''" />
							<img src="http://placehold.it/70x70" alt="Foto" tal:condition="foto.ruta_de_foto == ''" />
						</div>
					</a>
					<div id="fotos_producto" class="modal hide fade">
			            <div metal:use-macro="view.macros['carrusel_fotos']" tal:define="fotos view.fotos_grandes"></div>
					</div>
				</div>
				<div class="span9">
					<h1>${producto.fabricante} <span style="color: silver">${producto.nombre}</span></h1>
					<div class="row-fluid">
						<div class="span5">
							<table class="table">
					  			<thead>
					    			<tr>
					      				<th></th>
					    			</tr>
					  			</thead>
					  			<tbody>
						    		<tr>
						    			<td>
						    				<p>
						    					Fabricante<br />
						    					Nombre<br />
						    					Modelo<br />
						    					Código (${producto.tipo_de_codigo})<br />
						    					Debut en el mercado<br />
						    					Largo [m]<br />
						    					Ancho [m]<br />
						    					Alto [m]<br />
						    					Peso [kg]<br />
						    				</p>
						    			</td>
					  					<td>
					  						<p>
					  							${producto.fabricante}<br />
					  							${producto.nombre}<br />
					  							${producto.modelo}<br />
					  							${producto.codigo}<br />
					  							${producto.debut_en_el_mercado}<br />
					  							${producto.largo}<br />
					  							${producto.ancho}<br />
					  							${producto.alto}<br />
					  							${producto.peso}<br />
					  						</p>
					  					</td>
					  				</tr>
					  			</tbody>
							</table>
						</div>
						<div class="span7"></div>
					</div>
				</div>
			</div>
		</div>
		<div id="meta_datos">
			<input type="hidden" name="producto_id" value="${producto.producto_id}" />
		</div>
		
		<!-- Contenido
		================================================== -->	
		<div id="contenido_pestanas" class="tab-content">
			
	    	<!-- Informacion
			================================================== -->
	    	<div class="tab-pane active" id="informacion">
	    		<div metal:use-macro="view.macros['ruta_de_categoria']" tal:define="ruta view.ruta_categoria_actual"></div>
	      		<div class="row-fluid">
	      			<div class="span12">
	      				<table class="table">
				  			<thead>
				    			<tr>
				      				<th>Descripción</th>
				    			</tr>
				  			</thead>
				  			<tbody>
					    		<tr tal:repeat="descripcion view.descripciones">
					    			<td>
					    				<p>${descripcion.contenido}</p>
					    			</td>
				  				</tr>
				  			</tbody>
						</table>
					</div>
				</div>
				<div class="row-fluid">
          			<div class="span6">
          				<div metal:use-macro="view.macros['noticias']" tal:define="registros view.registro"></div>
          			</div>
          			<div class="span6">
          				<div metal:use-macro="view.macros['inventario_de_tiendas']" tal:define="lista view.inventario_reciente"></div>
          			</div>
				</div>
	    	</div>
	    	
	        <!-- Comentarios
			================================================== -->
	        <div class="tab-pane" id="comentarios" tal:define="comentarios view.calificaciones_resenas">
            	<div metal:use-macro="view.macros['comentarios']"></div>
            </div>
		</div>
  	</div>
  	<div metal:fill-slot="scripts_extra">
  		<script type="text/javascript" src="/estatico/js/bootstrap-tooltip.js"></script>
		<script type="text/javascript" src="/estatico/js/bootstrap-carousel.js"></script>
		<script type="text/javascript" src="/estatico/js/bootstrap-popover.js"></script>
		<script type="text/javascript" src="/estatico/js/bootstrap-modal.js"></script>
		<script type="text/javascript" src="/estatico/js/noticias.js"></script>
  		<script type="text/javascript" src="/estatico/js/producto.js"></script>
  	</div>
</div>