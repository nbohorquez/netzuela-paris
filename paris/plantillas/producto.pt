<div metal:use-macro="view.diagrama_global">
	<div metal:fill-slot="contenido">
		
		<!-- Encabezado
		================================================== -->
		<div class="page-header">
  			<h1>${producto.fabricante} ${producto.nombre}</h1>
		</div>
		
		<!-- Contenido
		================================================== -->	
		<div id="contenido_pestanas" class="tab-content">
			
			<!-- Noticias
			================================================== -->	
	       	<div class="tab-pane active" id="noticias">
	      		<div metal:use-macro="view.macros['noticias']"></div>
	    	</div>	
	    	
	    	<!-- Informacion
			================================================== -->
	    	<div class="tab-pane" id="informacion">
	      		<div class="row-fluid">
	      			<div class="span4">
	      				<div metal:use-macro="view.macros['fotos_medianas']"></div>
	      				<div metal:use-macro="view.macros['ruta_de_categoria']"></div>
	      				<div>
							<table class="table">
					  			<thead>
					    			<tr>
					      				<th>Caracteristicas</th>
					    			</tr>
					  			</thead>
					  			<tbody>
						    		<tr>
						    			<td>
						    				<p>
						    					Fabricante<br />
						    					Nombre<br />
						    					Modelo<br />
						    					Codigo (${producto.tipo_de_codigo})<br />
						    					Debut en el mercado<br />
						    					Largo [m]<br />
						    					Ancho [m]<br />
						    					Alto [m]<br />
						    					Peso [kg]<br />
						    				</p>
						    			</td>
					  					<td>
					  						<p>
					  							${producto.fabricante}<br />
					  							${producto.nombre}<br />
					  							${producto.modelo}<br />
					  							${producto.codigo}<br />
					  							${producto.debut_en_el_mercado}<br />
					  							${producto.largo}<br />
					  							${producto.ancho}<br />
					  							${producto.alto}<br />
					  							${producto.peso}<br />
					  						</p>
					  					</td>
					  				</tr>
					  			</tbody>
							</table>
						</div>
					</div>
          			<div class="span8">
		      			<tal:block tal:repeat="descripcion view.descripciones">
		      				<p tal:content="descripcion.contenido">Descripcion</p>
		      			</tal:block>
	          		</div>
				</div>
	    	</div>
	    	
	    	<!-- Inventario
			================================================== -->
	        <div class="tab-pane" id="inventario">
	      		<div tal:define="lista view.inventario_reciente" metal:use-macro="view.macros['inventario_de_tiendas']"></div>
	        </div>
	        
	        <!-- Comentarios
			================================================== -->
	        <div class="tab-pane" id="comentarios">
            	<div metal:use-macro="view.macros['comentarios']"></div>
            </div>
		</div>
  	</div>
  	<div metal:fill-slot="scripts_extra">
  		<script type="text/javascript" src="/estatico/js/bootstrap-carousel.js"></script>
  		<script type="text/javascript" src="/estatico/js/producto.js"></script>
  	</div>
</div>