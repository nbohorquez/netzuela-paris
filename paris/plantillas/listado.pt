<div metal:use-macro="view.diagrama_global">
	<div metal:fill-slot="contenido">
		<div class="page-header">
  			<h1>${nombre_pagina} <small>TODO: Listar los filtros que definieron esta busqueda</small></h1>
		</div>
		<table class="table">
  			<thead>
    			<tr tal:switch="nombre_pagina">
    				<th tal:case="'Productos'" tal:repeat="columna view.columnas_producto_reducido">${columna}</th>
    				<th tal:case="'Tiendas'" tal:repeat="columna view.columnas_cliente_reducido">${columna}</th>
    			</tr>
  			</thead>
  			<tbody>
  				<tr tal:repeat="item lista">
  					<tal:block tal:switch="nombre_pagina">
	  					<td tal:case="'Productos'" tal:repeat="columna view.columnas_producto_reducido">
	  						<p tal:content="getattr(item, columna)"></p>
						</td>
	    				<td tal:case="'Tiendas'" tal:repeat="columna view.columnas_cliente_reducido">  					
			        		<p tal:content="getattr(item, columna)"></p>
						</td>
					</tal:block>
				</tr>
  			</tbody>
		</table>
	</div>
</div>