    <!-- Listado de tiendas
    ================================================== -->
    <metal:listado_tiendas define-macro="listado_tiendas">
        <ul class="thumbnails">
            <li class="span2" tal:repeat="tienda lista">
                <div tal:define="enlace view.peticion.route_url('tienda', tienda_id = tienda.tienda_id)">
                    <a href="${enlace}" tal:omit-tag="not enlace">
                        <div class="thumbnail" tal:define="foto view.obtener_foto('tienda', tienda.tienda_id, 'pequenas')">
                            <img src="http://placehold.it/160x160" tal:condition="not foto" />
                            <img src="/estatico/${foto.ruta_de_foto}" tal:condition="foto" />
                        </div>
                    </a>
                    <div class="caption">
                        <a href="${enlace}" tal:omit-tag="not enlace">
                            ${tienda.nombre_comun}
                        </a><br />
                        <span>${tienda.nombre_legal}</span>
                        <p>
                            <span class="label label-success" tal:condition="tienda.abierto">Conectada</span>
                            <span class="label label-important" tal:condition="not tienda.abierto">Desconectada</span>
                            <br />
                            <em>${tienda.rif}</em><br />
                            <strong>Categoria</strong>
                            <span tal:condition="tienda.categoria">
                                ${tienda.categoria.nombre}
                            </span><br />
                            <input type="hidden" name="tienda_id" value="${tienda.tienda_id}" />
                        </p>
                    </div>
                   </div>
            </li>
        </ul>
    </metal:listado_tiendas>
    
    <!-- Listado de productos
    ================================================== -->
    <metal:listado_productos define-macro="listado_productos">
        <ul class="thumbnails">
            <li class="span2" tal:repeat="item lista">
                <div tal:define="enlace view.peticion.route_url('producto', producto_id = item.producto_id)">
                    <a href="${enlace}" tal:omit-tag="not enlace">
                        <div class="thumbnail" tal:define="foto view.obtener_foto('producto', item.producto_id, 'pequenas')">
                            <img src="http://placehold.it/160x160" tal:condition="not foto"/>
                            <img src="/estatico/${foto.ruta_de_foto}" tal:condition="foto"/>
                        </div>
                    </a>
                    <div class="caption">
                        <a href="${enlace}" tal:omit-tag="not enlace">${item.nombre}</a><br />
                        <p>
                            <em>${item.codigo}</em><br />
                            <strong>Categoria</strong>
                            <span tal:condition="item.categoria">
                                ${item.categoria.nombre}
                            </span><br />
                        </p>
                    </div>
                </div>
            </li>
        </ul>
    </metal:listado_productos>
    
    <!-- Listado de clientes
    ================================================== -->
    <metal:listado_clientes define-macro="listado_clientes">
        <table class="table">
            <thead>
                <tr>
                    <td>
                        <strong>Propiedades</strong>
                        <span class="pull-right" tal:condition="editar">
                            <a tal:attributes="href view.peticion.route_url('registro_tienda')">
                                <i class="icon-plus"></i>
                                Agregar tienda
                            </a>
                        </span>
                    </td>
                </tr>
            </thead>
            <tbody>
                <tr tal:repeat="item lista">
                    <td>
                        <div class="row-fluid">
                            <div class="span4">
                                <a href="${item.enlace}">
                                    <div class="thumbnail" tal:define="foto view.obtener_foto(item.tipo, item.tipo_id, 'pequenas')">
                                        <img src="http://placehold.it/160x160" alt="${item.nombre_comun}" tal:condition="not foto" />
                                        <img src="/estatico/${foto.ruta_de_foto}" alt="${item.nombre_comun}" tal:condition="foto" />
                                    </div>
                                </a>
                            </div>
                            <div class="span8">
                                <a href="${item.enlace}">${item.nombre_comun}</a><br />
                                <p>
                                    ${item.nombre_legal}
                                    <br />
                                    <strong>Ubicación</strong> ${item.ubicacion}<br />
                                </p>
                            </div>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </metal:listado_clientes>
</body>
</html>